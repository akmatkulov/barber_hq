<h2>Здесь вы можете записаться к парикмахеру</h2>
<script type="text/javascript">
    $(function(){
      $('#color').simplecolorpicker();
      $('#datetimepicker').datetimepicker();
    });
</script>

<form action="/visit" method="post" role="form">

  <div class="form-group">
    <label>Ваше имя</label>
    <input type="text" name="client[name]" class="form-control" placeholder="Ваше имя" value="<%= @user_name %>">
  </div>

  <div class="form-group">
    <label>Ваш номер телефона</label>
    <input type="text" name="client[phone]" class="form-control" placeholder="Ваш номер телефона" value="<%= @user_phone%>">
  </div>

  <div class="form-group">
    <label>Дата и время</label>
    <input id="datetimepicker" type="text" name="client[datestamp]" class="form-control" placeholder="Дата и время" value="<%= @date_time %>">
  </div>

  <div class="form-group">
    <label>Ваш парикмахер</label>


    <!--  <select name="barber" class="form-control">
      <% @barbers.each do |barber| %>
        <option <%= @barber.== barber.name ? "selected" : '' %>><%= barber.name %></option>
     <% end %>
    </select> -->


  </div>

  <div class="form-group">
    <label>Цвет покраски</label>
    <select id="color" name="client[color]">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

    <button type="submit" class="btn btn-info">Записатся</button>

</form>
